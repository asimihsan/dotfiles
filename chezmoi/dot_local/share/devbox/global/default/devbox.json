{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "_1password@latest",
    "atuin@latest",
    "bash-preexec@latest",
    "bash@latest",
    "btop@latest",
    "cheat@latest",
    "coreutils@latest",
    "ctags@latest",
    "difftastic@latest",
    "direnv@latest",
    "dotnet-sdk_8@latest",
    "eza@latest",
    "fd@latest",
    "fzf@latest",
    "gh@latest",
    "git@latest",
    "glab@latest",
    "gnumake@latest",
    "htop@latest",
    "imagemagick@latest",
    "jq@latest",
    "lazygit@latest",
    "libiconv@latest",
    "moreutils@latest",
    "neofetch@latest",
    "neovim@latest",
    "pv@latest",
    "rclone@latest",
    "ripgrep@latest",
    "rustup@latest",
    "starship@latest",
    "terraform@latest",
    "tmux@latest",
    "tmuxPlugins.better-mouse-mode@latest",
    "tmuxPlugins.resurrect@latest",
    "tree-sitter@latest",
    "vim@latest",
    "vivid@latest",
    "vscode@latest",
    "wget@latest",
    "yq@latest",
    "zoxide@latest",
    "zsh@latest",
    "zstd@latest",
    "restic@latest",
    "age@latest",
    "golangci-lint@latest",
    "binutils@latest",
    "zulu@latest",
    "lazydocker@latest",
    "dust@latest",
    "meld@latest",
    "gcc@latest",
    "ruby@latest",
    "cocoapods@latest",
    "just@latest",
    "aws-vault@latest",
    "awscli2@latest",
    "redis@latest",
    "k9s@latest",
    "expect@latest"
  ],
  "env": {
    "DEVBOX_GLOBAL_PREFIX": "$HOME/.local/share/devbox/global/default/.devbox/nix/profile/default",
    "DEVBOX_GLOBAL_ROOT":   "$HOME/.local/share/devbox/global/current",
    "CC":                   "/usr/bin/clang",
    "CXX":                  "/usr/bin/clang++",
    "LD":                   "/usr/bin/clang",
    "GOFLAGS":              "-buildmode=pie"
  },
  "shell": {
    "init_hook": [
      ". ${DEVBOX_GLOBAL_ROOT}/init.sh"
    ],
    "scripts": {
      "install-astro": [
        "echo cloning astronvim repo to ~/.config/nvim",
        "git clone --depth 1 https://github.com/AstroNvim/AstroNvim ~/.config/nvim"
      ],
      "install-hook-bash": [
        "echo adding 'devbox global shellenv' to ~/.bashrc",
        "grep -qF 'devbox global shellenv' ~/.bashrc || echo 'eval \"$(devbox global shellenv --init-hook)\"' >> ~/.bashrc",
        "tail -n 1 ~/.bashrc"
      ],
      "install-hook-zsh": [
        "echo adding 'devbox global shellenv' to ~/.zshrc",
        "grep -qF 'devbox global shellenv' ~/.zshrc || echo 'eval \"$(devbox global shellenv --init-hook)\"' >> ~/.zshrc",
        "tail -n 1 ~/.zshrc"
      ],
      "install-starship-prompt": [
        "if [ ! -f $HOME/.config/starship.toml ]",
        "then",
        "curl -fsSL https://devbox.getfleek.dev/config/starship/starship.toml > $HOME/.config/starship.toml",
        "fi"
      ],
      "latest-hash": [
        "curl -fsSL https://nixos.org/channels/nixos-unstable/git-revision"
      ]
    }
  },
  "nixpkgs": {}
}
