#!/usr/bin/env bash

set -euo pipefail

default_config_home="${HOME}/.config"
xdg_config_home="${XDG_CONFIG_HOME:-$default_config_home}"

if [[ "$xdg_config_home" == "$default_config_home" ]]; then
  exit 0
fi

source_config="${default_config_home}/restic-backup/config.toml"
target_config="${xdg_config_home}/restic-backup/config.toml"

if [[ ! -f "$source_config" ]]; then
  exit 0
fi

mkdir -p "$(dirname "$target_config")"

if [[ -f "$target_config" ]]; then
  exit 0
fi

install -m 600 "$source_config" "$target_config"
echo "Seeded restic-backup config at ${target_config}"
