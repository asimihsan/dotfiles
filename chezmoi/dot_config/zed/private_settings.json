// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "version": "2"
  },
  "context_servers": {
    "mcp-server-brave-search": {
      "settings": {
        "brave_api_key": "BSAXisqav2SADnpS_iaGcw1TKzpdQva"
      }
    },
    "mcp-server-linear": {
      "settings": {
        "linear_api_key": "lin_api_CKYp4n7tTNQqCM50ElxUTBFD3NsrspUYvgZcnj3G"
      }
    }
  },
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "agent_font_size": 20,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  // Inlay hints preconfigured by Zed: Go, Rust, Typescript and Svelte
  "inlay_hints": {
    "enabled": true
  },
  "buffer_font_family": "IosevkaCustom Nerd Font Mono",
  "buffer_font_features": {
    "calt": false
  },
  "buffer_line_height": {
    "custom": 1.3
  },
  "languages": {
    "Python": {
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["pyright", "ruff"]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 120,
          "lint": {
            "select": ["E", "F", "I"],
            "extendSelect": ["UP", "RUF"],
            "ignore": ["E501"],
            "fixable": ["A", "B", "C", "D", "E", "F", "I"],
            "unfixable": []
          }
        }
      }
    }
  }
}
